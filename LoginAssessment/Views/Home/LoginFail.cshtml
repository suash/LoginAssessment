<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <form method="POST" id="failed_login" action="~/Home/LoginFail">
                <h1>Failed Login</h1>
                <div style="margin: 0 0 20px;">
                    <h3 style="font-size: 14px; font-weight: bold">Was this login failure due to a memory or typing error?</h3>
                    <label class="radio-inline"><input type="radio" name="LoginReasonId" value="1" required>Memory</label>
                    <label class="radio-inline"><input type="radio" name="LoginReasonId" value="2" required>Typing</label>
                    <label class="radio-inline"><input type="radio" name="LoginReasonId" value="3" required>Both</label>
                </div>
                <div style="margin: 0 0 20px">
                    <h3 style="font-size: 14px; font-weight: bold">What device was used to login?</h3>
                    <label class="radio-inline"><input type="radio" name="LoginDeviceId" value="1" required>Phone</label>
                    <label class="radio-inline"><input type="radio" name="LoginDeviceId" value="2" required>Tablet</label>
                    <label class="radio-inline"><input type="radio" name="LoginDeviceId" value="3" required>Computer</label>
                </div>
                <div style="margin: 0 0 20px">
                    <h3 style="font-size: 14px; font-weight: bold">What type of password do you prefer using?</h3>
                    <label class="radio-inline"><input type="radio" name="LoginPreferenceId" value="1" required>Password</label>
                    <label class="radio-inline"><input type="radio" name="LoginPreferenceId" value="2" required>Passphrase</label>
                    <label class="radio-inline"><input type="radio" name="LoginPreferenceId" value="3" required>No Preference</label>
                </div>

                <div>
                    <button type="submit" class="btn btn-default submit">Submit</button>
                </div>

                <div class="clearfix"></div>
            </form>
        </section>
    </div>
</div>