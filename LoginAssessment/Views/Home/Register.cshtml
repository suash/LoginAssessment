<div class="login_wrapper">
    <div class="row">
        <section class="login_content">
            <div class="wizard">
                <div class="wizard-inner">
                    <div class="connecting-line"></div>
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="" data-original-title="Step 1">
                                <span class="round-tab">
                                    <i class="glyphicon glyphicon-user"></i>
                                </span>
                            </a>
                        </li>
                        <li role="presentation" class="disabled">
                            <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="" data-original-title="Step 2">
                                <span class="round-tab">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </span>
                            </a>
                        </li>
                        <li role="presentation" class="disabled">
                            <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="" data-original-title="Step 3">
                                <span class="round-tab">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </span>
                            </a>
                        </li>
                        <li role="presentation" class="disabled">
                            <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="" data-original-title="Complete">
                                <span class="round-tab">
                                    <i class="glyphicon glyphicon-ok"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
                <form method="POST" id="register">
                    <h1>Create Account</h1>
                    <div class="alert alert-danger" role="alert" id="fail" style="display: none; text-shadow: none; color: #000">
                        Registration Failed
                        <br>
                        Email has already been used
                    </div>
                    <div class="tab-content">
                        <fieldset class="tab-pane active" role="tabpanel" id="step1">
                            <h4>Step 1</h4>
                            <div style="margin: 0 0 20px;">
                                <input type="number" class="form-control" name="age" placeholder="Age" required="">
                            </div>
                            <div style="margin: 0 0 20px;">
                                <select class="form-control" name="gender" style="text-align: center; text-align-last: center;">
                                    <option selected="true" disabled="disabled" value=""> --- Gender --- </option>
                                    <option value="0">Female</option>
                                    <option value="1">Male</option>
                                </select>
                            </div>
                            <div>
                                <input type="email" class="form-control" name="email" placeholder="Email" required="">
                            </div>
                            <div class="clearfix"></div>
                            <button class="btn btn-default next-step" type="button">Next</button>
                        </fieldset>

                        <fieldset class="tab-pane" role="tabpanel" id="step2">
                            <h4>Step 2</h4>
                            <div style="text-align: left; color: darkred;">
                                <p>
                                    Password must meet the following criteria
                                </p><ol>
                                    <li>More than 8 characters long</li>
                                    <li>At least 1 special character (e.g. @@, $, %)</li>
                                    <li>At least 1 number (e.g. 3, 5, 2)</li>
                                    <li>At least 1 lowercase letter (e.g. a, h, k)</li>
                                    <li>At least 1 uppercase letter (e.g. Q, L, G)</li>
                                </ol>
                                The indicator will tell you if password is strong enough
                                <p></p>
                            </div>
                            <div>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required=""><div class="progress "><div class="progress-bar progress-bar-danger" style="width: 1%;"><span class="password-verdict" style="white-space: nowrap;"></span></div></div>
                            </div>
                            <div>
                                <input type="password" class="form-control" id="password2" placeholder="Confirm Password" required="">
                            </div>
                            <div class="clearfix"></div>
                            <br>
                            <button class="btn btn-default prev-step" type="button">Previous</button>
                            <button class="btn btn-default next-step" type="button">Next</button>
                        </fieldset>
                        <fieldset class="tab-pane" role="tabpanel" id="step3">
                            <h4>Step 3</h4>
                            <div style="text-align: left; color: darkred;">
                                <p>
                                    Please create a passphrase that meets the following criteria
                                </p><ol>
                                    <li>Only lowercase letters</li>
                                    <li>12 or more characters</li>
                                </ol>
                                The stronger the passphrase gets the faster the rabbit will run
                                <p></p>
                            </div>
                            <div>
                                <input type="text" class="form-control" name="passphrase" id="passphrase" placeholder="Enter Passphrase" onkeydown="checkPassphrase()" required="">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="confirmpassphrase" id="passphrase2" placeholder="Confirm Passphrase" required="">
                            </div>
                            <div>
                                <img src="images/00-slowest.gif" id="rabbit" class="img-thumbnail">
                            </div>
                            <div class="clearfix"></div>
                            <br>
                            <button class="btn btn-default prev-step" type="button">Previous</button>
                            <button class="btn btn-default next-step" type="button">Next</button>
                        </fieldset>

                        <fieldset class="tab-pane" role="tabpanel" id="complete">
                            <h4>Complete</h4>
                            <p>
                                You have successfully completed all steps.
                                <br>
                                Please click register to countinue
                                <br>
                                or go back and rectify any issues
                            </p>
                            <div class="clearfix"></div>
                            <button class="btn btn-default prev-step" type="button">Previous</button>
                            <button class="btn btn-default submit">Register</button>
                        </fieldset>

                    </div>

                    <div class="separator">
                        <p class="change_link">
                            Already a member ?
                            <br>
                            <a href="Home\Login" class="to_register">Log in</a>
                        </p>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>